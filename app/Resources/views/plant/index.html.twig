{% extends 'base.html.twig' %}

{% block body %}
<div class="be-wrapper">
    {% include 'navbar.html.twig' %} 
    {% include 'sidebar.html.twig' %}

    <div class="be-content">
        <div class="page-head">
            <a href="{{ path('plants_create') }}" class="btn btn-space btn-primary btn-lg pull-right"><span class="icon mdi mdi-flower-alt"></span> Add New Variety</a>
            <h2 class="page-head-title">Plant Varieties</h2>
        </div>
        
        <div class="main-content container-fluid">
            <div class="row">
            {% set index = 0 %}
            {% for plant in plants %}
                <div class="col-xs-12 col-md-3">
                    <div class="user-display">
                        {% if vich_uploader_asset(plant['seed'], 'imageFile', 'AppBundle\\Entity\\Seed') %}
                        <div class="user-display-bg">
                            <img src="{{ vich_uploader_asset(plant['seed'], 'imageFile', 'AppBundle\\Entity\\Seed') }}" alt="{{ plant['seed'].name }}">
                        </div>
                        {% else %}
                        <div class="user-display-bg">
                            <img src="{{ asset('assets/img/plant-basil.jpg') }}" alt="{{ plant['seed'].name }}">
                        </div>
                        {% endif %}
                        <div class="user-display-bottom">
                            <div class="user-display-info">
                                <div class="name"><a href="{{ path('plants_show', {'id': plant['id'] }) }}">{{ plant['seed'].name }}</a></div>
                                <div class="nick">{{ plant['seed_category'] }}</div>
                            </div>
                            <div class="row user-display-details">
                                <div class="col-xs-5">
                                    <div class="title">Amount</div>
                                    <div class="counter">{{ plant['seedling_total'] }} {{ units[index] }}</div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="title">Total Seedling Area</div>
                                    <div class="counter">{{ plant['area_count'] }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% set index = index + 1 %}
            {% endfor %}
            </div>    
        </div>
    </div>
</div>
{% endblock %}